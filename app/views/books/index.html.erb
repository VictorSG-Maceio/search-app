<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<hr>
<%= render "search_books" %>
<table>
 <thead>
   <tr>
     <th><%= sort_link(@q, :title, 'Title', default_order: :desc) %></th>
     <th>Body</th>
     <th><%= sort_link(@q, :author_name, 'Author', default_order: :desc) %></th>
     <th colspan="3"></th>
   </tr>
 </thead>
<hr>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
